services:
  backend:
    volumes:
      - ./todo-app-backend/src:/app/src
    ports:
      - "8080:8080"

  frontend:
    environment:
      - CHOKIDAR_USEPOLLING=true
    volumes:
      - ./todo-app-frontend:/app
      - /app/node_modules
    command: npm run dev
    ports:
      - "5173:5173"   

  mysql:
    ports:
      - "3306:3306"